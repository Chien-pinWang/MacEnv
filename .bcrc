
scale=2

define sin(x) {
    return s(x)
}

define cos(x) {
    return c(x)
}

define tan(x) {
    return s(x)/c(x)
}

define cot(x) {
    return 1/tan(x)
}

define sec(x) {
    return 1/c(x)
}

define csc(x) {
    return 1/s(x)
}

define log(x, b) {
    if (b==0) b=10
    return l(x)/l(b)
}

define power(x, p) {
    if (p==int(p)) {
        return x^int(p)
    } else {
        return e(p*l(x))
    }
}

define min(x, y) {
    if (x<y) return x
    return y
}

define max(x, y) {
    if (x>y) return x
    return y
}

define abs(x) {
    if (x<0) return -x
    return x
}

define int(x) {
    auto old_scale
    old_scale=scale
    scale=0; x=x/1
    scale=old_scale
    return x
}

define round(x) {
    if (x<0) x-=.5 else x+=.5
    return int(x)
}

define ceil(x) {
    auto intx
    intx=int(x)
    if (intx<x) intx+=1
    return intx
}

define floor(x) {
    return -ceil(-x)
}
